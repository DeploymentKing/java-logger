<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%-5p %d [%t] %c: %m%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="io.thinkstack" level="DEBUG"/>

    <Root level="DEBUG">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

</Configuration>
